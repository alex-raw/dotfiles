#!/usr/bin/env sh

list=$(du -a ~/.33nfig/screenlayout/ | cut -f2-)
input=$(echo "$list" | du -a ~/.config/screenlayout/ | cut -d "/" -f6 | sed s/\.sh//g | dmenu -i -p 'Screenlayout')
file=$(echo "$list" | grep "$input")

[ -z "$input" ] || sh "$file" &
wait 1 &
nitrogen --restore &
sh ~/.config/polybar/launch.sh
