#!/usr/bin/env sh

choices="i3
sxhkd
vim
latex
R
zsh
scripts
bookmarks
mutt
mail
programs
polybar
vifm
compton
zprofile
xinit
bash
"

POLYBAR() { input=$(ls ~/.config/polybar | grep ".*ini" | cut -f 1 -d "." | dmenu -i -p 'Polybar:')  ;}
SCRIPTS() { input=$(ls ~/.local/bin | dmenu -i -p 'Edit script:')  ;}

chosen=$(echo  "$choices"| dmenu -i -p 'Edit config:')

case "$chosen" in
	bash) $TERMINAL -e  nvim ~/.bashrc ;;
	zsh) $TERMINAL -e  nvim ~/.zshrc ;;
	zprofile) $TERMINAL -e  nvim ~/.zprofile ;;
	xinit) $TERMINAL -e  nvim ~/.xinitrc ;;
	i3) $TERMINAL -e  nvim ~/.config/i3/config ;;
	sxhkd) $TERMINAL -e  nvim ~/.config/sxhkd/sxhkdrc ;;
	vim) $TERMINAL -e  nvim ~/.config/nvim/init.vim ;;
	latex) $TERMINAL -e  nvim ~/.config/nvim/latex.vim ;;
	R) $TERMINAL -e  nvim ~/.config/nvim/r.vim ;;
	vifm) $TERMINAL -e  nvim ~/.config/vifm/vifmrc ;;
	polybar) POLYBAR && $TERMINAL -e nvim $(ls -d ~/.config/polybar/* | grep "$input") ;;
	scripts) SCRIPTS && $TERMINAL -e nvim $(ls -d ~/.local/bin/* | grep "$input") ;;
	compton) $TERMINAL -e  nvim ~/.config/compton/compton.conf ;;
	programs) $TERMINAL -e  nvim ~/Dropbox/minimal_install.sh ;;
	bookmarks) $TERMINAL -e  nvim ~/.config/bookmarks ;;
	mutt) $TERMINAL -e  nvim ~/.config/mutt/muttrc ;;
	mail) $TERMINAL -e  nvim ~/.config/nvim/mail.vim
esac
