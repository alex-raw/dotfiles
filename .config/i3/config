exec_always --no-startup-id sxhkd
exec_always --no-startup-id $HOME/.config/polybar/launch.sh
exec_always --no-startup-id sh $HOME/.config/screenlayout/default.sh & wait 1 & nitrogen --restore && wait 1 && sh $HOME/.config/polybar/launch.sh
exec --no-startup-id pkill redshift; redshift -l 50.925501:11.584938
exec --no-startup-id picom
exec --no-startup-id sh /home/alexraw/.config/screenlayout/default.sh
exec --no-startup-id desktop

# #--Basic Definitions--# #
font pango:Noto Sans 10
set $mod Mod4
set $term --no-startup-id $TERMINAL

for_window [class="^.*"] border pixel 1
new_window pixel 1
for_window [window_role="GtkFileChooserDialog"] resize set 800 600
for_window [window_role="GtkFileChooserDialog"] move position center
for_window [instance="arandr"] floating enable
for_window [instance="arandr"] resize set 800 600
for_window [instance="arandr"] move position center
for_window [class="Nm-network-editor"] floating enable

# Dropdown
exec --no-startup-id st -n calendar calcurse
for_window [instance="calendar"] floating enable
for_window [instance="calendar"] resize set 625 900
for_window [instance="calendar"] move scratchpad

exec --no-startup-id st -n dropdown
for_window [instance="dropdown"] floating enable
for_window [instance="dropdown"] resize set 625 400
for_window [instance="dropdown"] move scratchpad
for_window [instance="dropdown"] border pixel 3

exec --no-startup-id st -n math R -q --no-save
for_window [instance="math"] floating enable
for_window [instance="math"] resize set 425 200
for_window [instance="math"] move scratchpad
for_window [instance="math"] border pixel 3

bindsym $mod+w exec $term -t weather -e weather;
for_window [title="weather"] floating enable
for_window [title="weather"] resize set 742 890
for_window [title="weather"] move position center

bindsym $mod+r [instance="math"] scratchpad show; [instance="math"] move position center
bindsym $mod+udiaeresis [instance="calendar"] scratchpad show; [instance="calendar"] move position center
bindsym $mod+BackSpace [instance="dropdown"] scratchpad show; [instance="dropdown"] move position center

# #---Colors---# #
# class                 border  backgr. text    indicator child_border
client.focused          #FFD7A7 #FFD7A7 #ffffff #FFD7A7

# #---Basic Bindings---# #
floating_modifier $mod
bindsym $mod+c kill

bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

bindsym KP_Left move left
bindsym KP_Down move down
bindsym KP_Up move up
bindsym KP_Right move right

bindsym $mod+Shift+h move left
bindsym $mod+Shift+k move down
bindsym $mod+Shift+j move up
bindsym $mod+Shift+l move right

bindsym $mod+Ctrl+h move container to output left; focus output left
bindsym $mod+Ctrl+k move container to output down; focus output down
bindsym $mod+Ctrl+j move container to output up; focus output up
bindsym $mod+Ctrl+l move container to output right; focus output right

bindsym F11 fullscreen toggle
bindsym $mod+e layout toggle split
bindsym $mod+Shift+space floating toggle
bindsym $mod+v split toggle

# Workspaces
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10

bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9
bindsym $mod+Shift+0 move container to workspace number $ws10

set $monitor_one HDMI-A-0
set $monitor_two HDMI-A-1
set $monitor_three DVI-D-0

workspace $ws1 output $monitor_one
workspace $ws2 output $monitor_one
workspace $ws3 output $monitor_one
workspace $ws4 output $monitor_two
workspace $ws5 output $monitor_two
workspace $ws6 output $monitor_two
workspace $ws7 output $monitor_two
workspace $ws8 output $monitor_three
workspace $ws9 output $monitor_three
workspace $ws0 output $monitor_three

bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart

# resize window
bindsym $mod+Left resize shrink width 3 px or 3 ppt
bindsym $mod+Down resize grow height 3 px or 3 ppt
bindsym $mod+Up resize shrink height 3 px or 3 ppt
bindsym $mod+Right resize grow width 3 px or 3 ppt

# Gaps
gaps inner 20
gaps outer 0
bindsym $mod+g gaps inner current plus 5
bindsym $mod+Shift+g gaps inner current minus 5
bindsym $mod+Ctrl+g gaps
bindsym $mod+o gaps inner current set 0
bindsym $mod+Shift+o gaps inner current set 20

