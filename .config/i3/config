# #---Basic Definitions---# #
font pango:Noto Sans 10
set $mod Mod4
# set $hyp Mod3
set $term --no-startup-id $TERMINAL

for_window [class="^.*"] border pixel 1
new_window 1pixel
for_window [window_role="GtkFileChooserDialog"] resize set 800 600
for_window [window_role="GtkFileChooserDialog"] move position center
for_window [instance="arandr"] floating enable
for_window [instance="arandr"] resize set 800 600
for_window [instance="arandr"] move position center
for_window [class="Nm-network-editor"] floating enable

# Dropdown
exec --no-startup-id $term -n calendar calcurse
for_window [instance="calendar"] floating enable
for_window [instance="calendar"] resize set 625 900
for_window [instance="calendar"] move scratchpad

exec --no-startup-id $term -n dropdown
for_window [instance="dropdown"] floating enable
for_window [instance="dropdown"] resize set 625 400
for_window [instance="dropdown"] move scratchpad
for_window [instance="dropdown"] border pixel 5

exec --no-startup-id $term -n math R -q --no-save
for_window [instance="math"] floating enable
for_window [instance="math"] resize set 425 200
for_window [instance="math"] move scratchpad
for_window [instance="math"] border pixel 5

for_window [instance="weather"] floating enable
for_window [instance="weather"] resize set 600 760
for_window [instance="weather"] move position center

