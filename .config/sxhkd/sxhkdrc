	$TERMINAL
super + {_, shift} + d
	rofi -show {drun, run} -show-icons
super + {v,n,m,e}
	$TERMINAL -e {vifmrun,neomutt,ncmpcpp,nvim}
super + {s,f,q}
	{configedit, websearch, fussh}
super + p
	brave --incognito
super + y
	brave --new-window http://www.youtube.com
super + b
	brave --new-window
super + t
	$TERMINAL --class wiki -e bash -c "sleep 0.03 && nvim $HOME/Nextcloud/vimwiki/index.md"
super + w
	$TERMINAL -e bash -c "ssh rawadmin@161.35.25.213"
super + udiaeresis
	gsimplecal

# ----- super + shift; occupied hjkl
