# {{{ BSPWM Bindings
super + c
	xdo close
super + shift + {q,r}
	bspc {quit,wm -r}

# Move, focus and swap windows
super + {_,shift,ctrl + } {h,j,k,l}
	bspc node -{f,s,m} {west,south,north,east}
super + shift + {1-9,0}
	bspc node -d {1-9,0}
super + {_,ctrl + }{1-9,0}
	bspc desktop -{f,s} {1-9,0}
super + b
	bspc node -s biggest.local || bspc node -s next.local
super + alt + {1,2,3}
	bspc monitor -f ^{1,2,3}

# toggle tiled and monocl
super + F11
	bspc desktop -l next
super + shift + space
	bspc node focused.tiled -t floating || bspc node focused.floating -t tiled

# gaps
super + o
	bspc config window_gap {0,15}
super { ,+ alt } + g
	bspc config window_gap $(($(bspc config window_gap) {+,-} 3))

# }}}
# {{{ Programs

# Basics
super + odiaeresis
	$TERMINAL
super + d
	rofi -combi-modi window,drun -show combi

# Terminal Programs
super + {space,m}
	$TERMINAL -e {vifmrun,ncmpcpp}
super + n
	mailsync & $TERMINAL -e neomutt
super + alt + n
	mailsync & $TERMINAL -e neomutt -R
super + w
	$TERMINAL -e bash -c "weather"
super + t
	bspc desktop -f 7 && $TERMINAL -e bash -c "sleep 0.03 && nvim $HOME/Dropbox/vimwiki/index.md"

# scripts
super + {s,f,x,q,w}
	{configedit, websearch, teaching, fussh, weather}
super + alt + {i,l,c,p,m,u}
	{passmenu, literature, cheatsheets, present2, dmenumount, dmenuunmount}

# Graphical
super + {udiaeresis,a,v}
	{gsimplecal,arandr,pavucontrol}
super + alt + space
	nautilus
super + p
	brave --incognito
super + y
	bspc desktop -f 1 && brave --new-window http://www.youtube.com

#F-keys
Print
	gnome-screenshot -i
F8
	monitors
super + F9
	blurlock
super + F12
	prompt "Reboot computer?" "systemctl reboot"
super + alt + F12
	prompt "Shutdown computer?" "systemctl poweroff"

# }}}
# {{{ Fn keys

{XF86AudioRaiseVolume, XF86AudioLowerVolume}
	pactl set-sink-volume @DEFAULT_SINK@ {+,-}10%
XF86AudioMute
	pactl set-sink-mute @DEFAULT_SINK@ toggle
{XF86AudioNext, XF86AudioPrev, XF86AudioPlay}
	mpc {next, prev, toggle}
XF86MonBrightnessUp
	xbacklight -inc 7
XF86MonBrightnessDown
	xbacklight -inc -7

# }}}
